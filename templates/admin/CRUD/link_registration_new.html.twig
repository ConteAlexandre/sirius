{% extends base_template %}

{%- block actions -%}
    {% include '@SonataAdmin/CRUD/action_buttons.html.twig' %}
{%- endblock -%}

{%- block tab_menu -%}
    {{ knp_menu_render(admin.sidemenu(action), {
        'currentClass': 'active',
        'template': get_global_template('tab_menu_template')
    }, 'twig') }}
{%- endblock -%}

{% block content %}
    <div class="sonata-ba-delete">
        <div class="box box-success">
            <div class="box-header">
                <h3 class="box-title">{{ 'Link Registration' }}</h3>
            </div>
            <div class="box-footer clearfix">
                {{ form_start(form, { 'attr': {'class': 'float-left'}}) }}
                {{ form_label(form) }}
                {{ form_errors(form) }}
                {{ form_widget(form) }}

                <input type="submit" value="Submit" name="submitted" id="submitted" class="btn btn-success">
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock content %}